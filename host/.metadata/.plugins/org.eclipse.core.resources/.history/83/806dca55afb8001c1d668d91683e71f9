#include<stdio.h>
#include<stdint.h>



typedef struct{
	uint8_t crc;
	uint8_t status;
	uint16_t payload;
	uint8_t bat;
	uint8_t sensor;
	uint8_t longAddr;
	uint8_t shortAddr;
	uint8_t addrMode;
}packet_t;

//function defs
void waitKey(void);
void displayPacketElements(packet){

int main()
{
	int32_t val;
	packet_t my_packet;

	printf("Enter the 32-bit package value : ");
	if(scanf("%d", &val) == 0){
		printf("Invalid entry !\n");

	// extract the data from incoming package
	my_packet.crc 	 	= val & (3 << 0);
	my_packet.status 	= val & (4 << 0);
	my_packet.payload 	= val & (0xFFF << 3);
	my_packet.bat 		= val & (7 << 15);
	my_packet.sensor	= val & (7 << 18);
	my_packet.longAddr  = val & (0xFF << 21);
	my_packet.shortAddr = val & (3 << 29);
	my_packet.addrMode  = val & (1 << 31);



	printf("Memory Address    ,   Data\n");
	printf("================================\n");
