#include<stdio.h>
#include<stdint.h>

//function defs
void waitKey(void);

struct packet{
	uint8_t crc;
	uint8_t status;
	uint16_t payload;
	uint8_t bat;
	uint8_t sensor;
	uint8_t longAddr;
	uint8_t shortAddr;
	uint8_t addrMode;
};

int main()
{
	int32_t val;

	printf("Enter the 32-bit package value : ");
	if(scanf("%d", &val) == 0){
		printf("Invalid entry !\n");

	// assign the value of crc



	uint8_t *ptr;
	ptr = (uint8_t *)&carVolvo;

	uint8_t totalSizeOfVolvo = sizeof(carVolvo);

	printf("Memory Address    ,   Data\n");
	printf("================================\n");
	for(uint8_t i = 0; i < totalSizeOfVolvo; i++){
		printf("%p  ,     %X\n", ptr, *ptr);
		ptr++;
	}

	printf("Total Memory Consumed by Volvo = %I64u", sizeof(carVolvo));

	waitKey();
	return 0;
}

void waitKey(){
	//Exit Section with wait KEY
	printf("\nPress 'Enter' key to EXIT..");
	while(getchar() != '\n'){};
	getchar();
}


