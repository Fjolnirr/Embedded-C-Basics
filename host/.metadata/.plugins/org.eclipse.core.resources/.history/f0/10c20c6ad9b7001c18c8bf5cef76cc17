#include<stdio.h>
#include<stdint.h>

//function defs
void waitKey(void);

int main()
{
	int16_t top;

	printf("Please enter Top number(int) of pyramid : ");
	if(scanf("%hd", &top) == 0){
		printf("Invalid entry !\n");
		waitKey();
		return 0;


	waitKey();
	return 0;
}

void waitKey(){
	//Exit Section with wait KEY
	printf("\nPress 'Enter' key to EXIT..");
	while(getchar() != '\n'){};
	getchar();
}

